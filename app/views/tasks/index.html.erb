<h1>My tasks</h1>
<%@tasks.each do |task|%>
  <div>
    <input type="checkbox" name="<%= task.title %>" <%= task.completed ? "checked" : "unchecked" %>>
    <label for="<%= task.title %>"><%= link_to task.title, task_path(task.id) %></label>
  </div>
<% end %>
<br>
<a><%= link_to "Create a new task", tasks_new_path %></a>
