<h1><%= @task.title %></h1>
<div class="details">
  <%= @task.details %>
</div>
<br>
<div>
  <input type="checkbox" name="<%= @task.title %>" <%= @task.completed ? "checked" : "unchecked" %>>
  <label for="<%= @task.title %>"><%= @task.completed ? "This task is completed!" : "This task is not completed yet!" %></label>
</div>
<br>
<a><%= link_to "Edit this task", edit_path %></a>
<br>
<a><%= link_to "Delete this task", delete_path, method: :delete, data: { confirm: "Do you really to f**** delete this task????"} %></a>
<br>
<a><%= link_to "Back to tasks list", tasks_path %></a>
